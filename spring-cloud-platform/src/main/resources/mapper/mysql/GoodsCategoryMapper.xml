<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangz.demo.spring.cloud.platform.dao.GoodsCategoryMapper">

    <sql id="tableName">good_category</sql>

    <delete id="removeAllByShopId">
        delete from
        <include refid="tableName"/>
        where shop_id = #{shopid}
    </delete>

    <select id="listByShopIdAndIdName" resultType="com.zhangz.demo.spring.cloud.platform.entity.GoodsCategory">
        select * from
        <include refid="tableName"/>
        where shop_id = #{shopid}
        <if test="null != id">
            and id = #{id}
        </if>
        <if test="null != categoryName and categoryName != '' ">
            and name = #{categoryName}
        </if>
    </select>
    <select id="getMaxId" resultType="java.lang.Long">
        select  COALESCE(MAX(id), 10000) from
        <include refid="tableName"/>
    </select>


</mapper>
