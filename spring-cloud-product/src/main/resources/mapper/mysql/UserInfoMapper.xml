<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangz.demo.spring.cloud.product.dao.UserInfoMapper">

    <sql id="tableName">user_info</sql>

    <update id="modifyNice">
        update
        <include refid="tableName"/>
        set nick = #{nick}
        where user_id = #{userId}
    </update>

    <select id="selectByPhone" resultType="com.zhangz.demo.spring.cloud.product.entity.UserInfo">
        select * from
        <include refid="tableName"/>
        where phone = #{phone}
    </select>

    <select id="selectByWxOpenId" resultType="com.zhangz.demo.spring.cloud.product.entity.UserInfo">
        select * from
        <include refid="tableName"/>
        where openid = #{openid}
    </select>

</mapper>
